<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/geomontt"/>
    <TextView
        android:id="@+id/nombreUsuario"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Hola, Usuario"
        android:gravity="center"/>
    <Button
        android:id="@+id/btnMenuMapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Mapa"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btnMenuMonumentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Monumentos"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btnMenuEditarPerfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Editar Perfil"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btnMenuUsuarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Usuarios registrados"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btnMenuSalir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Salir"
        android:layout_margin="20dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>